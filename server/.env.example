# Server runs on http://localhost:5001 by default
PORT=5001

# Supabase settings
SUPABASE_JWT_SECRET=YOUR_SUPABASE_JWT_SECRET
SUPABASE_JWT_EXPIRES_IN_SECONDS=3600

# Firebase Admin credentials (choose ONE option)
# Option A (recommended locally): set GOOGLE_APPLICATION_CREDENTIALS to a downloaded service account json
# Example (Windows): setx GOOGLE_APPLICATION_CREDENTIALS "C:\\path\\to\\service-account.json"

# Option B: paste service account json as a single-line string
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}

# Optional: restrict accepted Firebase project
# FIREBASE_PROJECT_ID=your-firebase-project-id
